{
  "mpi": {
    "ens_size": 50,
    "ppn": 1
  },

  "solver": {
    "inflation": {},
  },

  "observation": {
    "obsdef": [
      ["obs1", 1, "observation type 1"],
      ["obs2", 2, "observation type 2"],
    ],
    "platdef": [
      ["prof", 1, "ocean insitu profile"],
      ["sat",  1000, "ocean satellite ob"],
    ],
    "ioclass": "obsio_test",
    "obsio_test": [
      ["obs1", "sat", "state1", 40.5, 220.5, 1.0,  0.0,  1.0, 1.0],
      ["obs2", "prof",  "state3", 1.5,  220.5, 1.0, 10.0, -1.0, 1.0],
    ]
  },



  "state": {
    "verbose": false,
    "ioclass": "stateio_nc",
    "compression": 0,
    "hzgrid": {
      "hz1": {
        "lat1d": ["lat", "bkg/bkg.0001.nc"],
        "lon1d": ["lon", "bkg/bkg.0001.nc"],
      },
    },
    "vtgrid": {
      "vt1": {
        "vert1d": ["depth", "bkg/bkg.0001.nc"],
      },
    },
    "statedef": {
      "state1": {
        "hzgrid": "hz1",
        "vtgrid": "vt1",
        "input": ["var1", "bkg/bkg.#ENS4#.nc"],
        "output": ["var1", "#TYPE#.#ENS4#.nc"],
      },
      "state2": {
        "hzgrid": "hz1",
        "vtgrid": "vt1",
        "input": ["var2", "bkg/bkg.#ENS4#.nc"],
        "output": ["var2", "#TYPE#.#ENS4#.nc"],
      },
      "state3": {
        "hzgrid": "hz1",
        "vtgrid": "vt1",
        "input": ["var3", "bkg/bkg.#ENS4#.nc"],
        "output": ["var3", "#TYPE#.#ENS4#.nc"],
      },
    },
  },

  "localization": {
      "class": "loc_ocean",
      "hzloc_prof" : "0.0 550e3 / 10.0 300e3 / 50 100e3",
      "hzloc_sat"  : "0.0 200e3 / 10.0 50e3",
  }
}
